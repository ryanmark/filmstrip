<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Filmstrip" %></title>

    <%= stylesheet_link_tag "normalize", "foundation", "all" %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.string/3.0.3/underscore.string.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/dropbox.js/0.10.2/dropbox.min.js"></script>
    <%= javascript_include_tag  "foundation.min.js" %>
    <%= javascript_include_tag  "modernizr.js" %>

    <%= javascript_include_tag  "all", "foundation.min", "modernizr" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
